<configuration>
    <variable scope="context" name="LOG_PATH" value="./var/log/"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{STRICT,UTC} [%t] %highlight(%le) %lo{20} : %replace(%m){'\.+$', ''}%replace( ; %kvp{NONE} ){' ;  ', ''}%n%rEx</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="Application" level="DEBUG"/>
    <logger name="io.margeta.jvmlabs" level="TRACE"/>
</configuration>
